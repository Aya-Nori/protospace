<% @prototypes.each do |prototype| %>
  <div class="card">
    <% if prototype.image.attached? %>
      <%= link_to image_tag(prototype.image.variant(resize: '300x300'), class: :card__img ), prototype_path(prototype.id)%>
    <% else %>
      <%= link_to root_path %>
    <% end %>
    <div class="card__body">
      <%= link_to prototype.title, prototype_path(prototype.id), class: :card__title%>
      <p class="card__summary">
      <%= prototype.catch_copy %>
      </p>
      <%= link_to "by #{prototype.user.name}", user_path(prototype.user), class: :card__user %>
    </div>
  </div>
<% end %>
